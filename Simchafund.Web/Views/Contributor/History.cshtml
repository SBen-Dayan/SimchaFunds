@{
    ViewData["Title"] = "History";
}
@model HistoryViewModel

<div class="header">
    <h1>History for @Model.Contributor.FirstName @Model.Contributor.LastName</h1>
    <h3>Current Balance: @Model.Contributor.Balance.ToString("c")</h3>
</div>

<div class="row header">
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Action</th>
                    <th>Date</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var action in Model.Actions)
                {
                    <tr>
                        <td>@action.Action</td>
                        <td style="text-align: center; vertical-align: middle;">
                            @action.Date.ToLongDateString()
                        </td>
                        <td style="text-align: center; vertical-align: middle;">
                            @{var amount = action.Amount.ToString();}
                            @(action.Amount < 0 ? $"-${amount.Substring(1, amount.Length - 3)}" : action.Amount.ToString("c"))
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div style="text-align:center;">
    <a class="btn btn-lg btn-danger" href="/contributor">Back to Contributors</a>
</div>
